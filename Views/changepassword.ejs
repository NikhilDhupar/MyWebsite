<!DOCTYPE html>
<html>

<head>
    <title>Change Password</title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
</head>

<style>
    .main {
        margin-top: 80px;
        display: grid;
        grid-template-columns: 2fr 3fr 2fr;
        margin-left: 60px;
        background-color: rgb(236, 236, 236)
    }

    .FormWindow {
        border-width: 5px;
        border-style: solid;
        border-color: rgb(216, 214, 214);
        background-color: white;
        margin-top: 100px;
        margin-right: 10px;
        padding: 10px 10px 10px 20px;
    }

    .logoutforminput{
        width: 95%;
        margin: 5px;
        height: 20px;
    }
</style>

<body style="background-color: rgb(236, 236, 236)">
    <%- include header.ejs %>
    <%- include sidebar.ejs %>
    <div class="main" id="main">
        <div style="background-color: rgb(236, 236, 236)"></div>
        <div class="FormWindow">
            <h1 style="font-size: 42px; font-weight: 250;">Change Password</h1>
            <form action="/changePassword/update" method="POST">
                <label>Old Password: </label>
                <br>
                <input name="oldpaswd" class="logoutforminput">
                <br><br>
                <label>New Password: </label>
                <br>
                <input name="newpaswd" class="logoutforminput">
                <br><br>
                <input type="submit" value="Submit" class="btn btn-success">
            </form>
        </div>
        <div style="background-color: rgb(236, 236, 236)"></div>
    </div>

</body>

</html>