<!DOCTYPE html>
<html>

<head>
    <title>Community List</title>
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <!-- <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script> -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

</head>
<style>
    .main {
        margin-left: 100px;
        margin-top: 80px;
        background-color: rgb(250, 250, 250);
        transition: .5s;
    }

    .actionbut {
        padding: 5px 8px 5px 8px;
        cursor: pointer;
        margin: 5px;
        font-size: 14px;
        color: white;
        display: inline-block;
    }

    .editbut {
        background-color: rgb(47, 47, 94);
    }

    .tabtext {
        font-size: 14px;
        color: white;
        background-color: rgba(0, 0, 0, 0.76);
        margin: 10px 5px 30px 5px;
    }

    .userdisp {
        height: 20px;
        padding: 5px 10px 5px 10px;
        text-align: center;
        border-radius: 5px;
        box-shadow: 0 4px 8px 0 rgb(116, 115, 115);
    }

    .querytab {
        float: right;
        padding: 0px 5px;
        height: 30px;
    }

    .cpic {
        background: rgb(255, 255, 255) !important;
        height: 50px;
        width: 50px;
        border: 3px solid #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    .listing-deactive{
        border-width: 2px;
        border-style: solid;
        border-color: red;
    }
    .listing-active{
        border-width: 2px;
        border-style: solid;
        border-color: green;
    }

</style>

<body style="background-color: rgb(250, 250, 250)">
    <%- include('header.ejs',{user : user}) %>
    <%- include('sidebar.ejs',{user : user}) %>
    <div class="main" id="main">
            <span class="tabtext userdisp" style="float:left;font-size: 16px"><b>Community List</b></span>
            <select class="tabtext querytab" name="roletab" required style="width: 180px" id="roletab">
                <option value="all">All</option>
                <option value="direct">Direct</option>
                <option value="permission">Permission</option>
            </select>
            <span class="tabtext userdisp" id="refreshbut" style="float:right;cursor: pointer; font-size: 16px"><i
                class='fas fa-sync-alt' style='font-size:14px;color:white'></i> Refresh</span>

                <table id="usertable" class="usertable display cell-border" style="width: 100%">
                        <thead>
                            <tr>
                                <th class="cell-border">Community Name</th>
                                <th>Membership Rule</th>
                                <th>Community owner</th>
                                <th>Creation Date</th>
                                <th>Actions</th>
                                <th>Community Pic</th>
                            </tr>
                        </thead>
                        <tbody>
            
                        </tbody>
                    </table>
    </div>
</body>
<script>
        $(document).ready(function () {
        table = $('#usertable').DataTable({
            processing: true,
            serverSide: true,
            "ajax": {
                "url": "/community/communitylist/data",
                "type": "POST",
                // "data": function (d) {
                //     d.querystatus = globalstatus;
                //     d.queryrole = globalrole
                // }
            },
            "columns": [{
                    "data": "name"
                },
                {
                    "data": "rule"
                },
                {
                    "data": "creator"
                },
                {
                    "data": "createdate"
                },
                {
                    "data": null
                },
                {
                    "data": "imagepath"
                },
            ],

            "columnDefs": [{
                "targets": -1,
                "render": function (data, type, row, meta) {
                    console.log(row);
                    var r = row.imagepath;
                    if(row.status=="deactive")
                    return "<center><img src='/uploads/" + r + "' class='cpic listing-deactive'></center>";
                    else
                    return "<center><img src='/uploads/" + r + "' class='cpic listing-active'></center>";
                }
            },{
                "targets": -2,
                "render": function (data, type, row, meta) {
                    return '<center><span class="actionbut editbut" id="editbut"><i class="fas fa-edit"></i></span></center>'
            }}],
            "contentType": "application/json",
        });
    });
</script>